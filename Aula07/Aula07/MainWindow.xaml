<Window x:Class="Aula07.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aula07"
        mc:Ignorable="d"
        Title="Gestão de Ficheiros" Height="376" Width="338">
    <Grid Margin="0,0,0,2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="tbFicheiro" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="NoWrap" VerticalAlignment="Center" Width="158" Height="312" VerticalScrollBarVisibility="Visible" UseLayoutRounding="False" HorizontalScrollBarVisibility="Visible" AcceptsReturn="True"/>
        <Button x:Name="btnAbrir" Content="Abrir" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="205,21,0,0" VerticalAlignment="Top" Width="77" Height="33" Click="btnAbrir_Click"/>
        <Button x:Name="btnGuardar" Content="Guardar" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="205,75,0,0" VerticalAlignment="Top" Width="77" Height="33" Click="btnGuardar_Click"/>

    </Grid>
</Window>
    
